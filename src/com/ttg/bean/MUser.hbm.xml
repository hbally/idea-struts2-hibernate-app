<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.ttg.bean.MUser" table="m_user" schema="test">
        <id name="no">
            <column name="no" sql-type="int(48)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(128)" length="128" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(48)" not-null="true"/>
        </property>
        <property name="url">
            <column name="url" sql-type="varchar(128)" length="128" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="int(48)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>